{
    "manifest_version": 2,
    "name": "Degender the Web",
    "short_name": "DGtW",
    "description": "'Degender the Web' replaces gendered pronouns on most Web pages with 'they/them/their'.",
    "version": "0.9.0",
    "key": "",
    "browser_action": {
        "default_title": "Degender the Web",
        "default_popup": "src/popup.html"
    },
    "content_scripts": [
        {
            "matches": ["file://*", "*://*/*"],
            "css": ["degender-the-web.css"],
            "js": ["lib/compromise.min.js", "src/content.js"],
            "run_at": "document_idle"
        }
    ],
    "permissions": ["https://www.google-analytics.com/", "storage"],
    "content_security_policy": "script-src 'self' https://www.google-analytics.com; img-src *; object-src 'self'",
    "web_accessible_resources": ["data/*.js", "src/*.js"],
    "icons": {
        "16": "img/icon16.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png"
    },
    "options_ui": {
        "page": "src/options.html",
        "open_in_tab": false
    }
}
